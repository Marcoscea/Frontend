@page "/Producto"
@using Models
@using Services
@inject IProductoService ProductoService

<MudText Typo="Typo.h3">Productos de la tienda</MudText>

<MudGrid>
    @foreach (var item in productos)
    {
        
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard>
                <MudCardHeader Class="yellow Lighten-3">
                    <MudCardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Nombre</MudText>
                    </MudCardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                 
                    <MudText Typo="Typo.body2">Precio: @item.Precio</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Descripcion</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
         
    }


</MudGrid>

@code {
    IEnumerable<Producto> productos = new List<Producto>();
    protected override async Task OnInitializedAsync()
    {
        productos = await ProductoService.GetAll();
    }
}
