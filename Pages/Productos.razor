@page "/Producto"
@using Models
@using Services
@inject IProductoService ProductosService

<MudText Typo="Typo.h3">Productos de la tienda</MudText>

<MudGrid>
    @foreach (var item in deptos)
    {
        string Precio = "";
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard>
                <MudCardHeader Class="yellow Lighten-3">
                    <MudCardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Precio</MudText>
                    </MudCardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                  @*  @switch (item.Precio)*@
                    {
                        case 1:
                            Precio = "$12.99";
                            break;
                        case 2:
                            Precio = "$19.99";
                            break;
                        case 3:
                            Precio = "$39.99";
                            break;

                    }
                    <MudText Typo="Typo.body2">Precio: @Precio</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Descripcion</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
         
    }


</MudGrid>

@code {
    IEnumerable<Producto> deptos = new List<Producto>();
    protected override async Task OnInitializedAsync()
    {
        deptos = await ProductosService.GetAll();
    }
}
